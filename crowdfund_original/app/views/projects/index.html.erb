<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Projects</title>
	</head>
	<body>
		<h1><%= pluralize(@projects.size, "Project") %></h1>
		<% @projects.each do |project| %>
			<article>
				<header>
					<h2><%= link_to(project.name, project) %></h2>
				</header>
				<table>
					<tr>
						<th>description:</th>
						<td><%= truncate(project.description, length: 150) %></td>
					</tr>
					<tr>
						<th>Target:</th>
						<td><%= number_to_currency(project.target_pledge_amount) %></td>
					</tr>
					<tr>
						<th>Website</th>
						<td><%= project.website %></td>
					</tr>
					<tr>
						<th>End Date</th>
						<td><%= project.pledging_ends_on %> (<%= time_remaining(project) %> remaining)</td>
					</tr>
				</table>
			</article>
		<% end %>							
	</body>
</html>